<Page x:Class="MineSweeper.DifficultyChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MineSweeper"
      mc:Ignorable="d"
      Background="White"
      Title="MineSweeper" Height="450" Width="350">
    <Grid>
        <StackPanel Grid.Column="1">
            <Label FontSize="25.0" FontWeight="ExtraBold" Content="Choose Difficulty:" HorizontalContentAlignment="Center" Width="250" Margin="0,20,0,0"/>
            <Button Name="B1" Content="Beginner (8x8, 10 mines)" Height="50" Margin="70,20,70,0" Cursor="Hand" Click="onClickDifficulty"/>
            <Button Name="B2" Content="Intermediate (16x16, 40 mines)" Height="50" Margin="70,20,70,0" Cursor="Hand" Click="onClickDifficulty" />
            <Button Name="B3"  Content="Expert (24x24, 99 mines)" Height="50" Margin="70,20,70,0" Cursor="Hand" Click="onClickDifficulty" />
            <Button Content="Back" Height="50" Margin="100,50,100,0" Cursor="Hand" Click="onClickBack" />
        </StackPanel>
    </Grid>
</Page>
